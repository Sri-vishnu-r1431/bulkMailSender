<%- layout("./layouts/boilerplate")%>
    <style>
        .row p:not(:nth-child(1)) {
            width: calc(100%/8);
            word-wrap: break-word;
        }

        .row p:nth-child(1) {
            width: calc(100%/4);

        }

        .row {
            border: 2px solid black;
            border-radius: 15px;
        }

        .row p {
            font-size: 1.2rem;
        }

        .about {
            padding: 2rem;
            overflow: hidden;
        }

        .about:first-child {
            color: grey;
            background-color: black;
            text-transform: capitalize;
            border-top-left-radius: inherit;
            border-top-right-radius: inherit;
            font-weight: 500;
        }

        .about:not(:first-child) {
            border-radius: 15px;
            background-color: #d9e4f5;
            background-image: linear-gradient(315deg, #d9e4f5 0%, #f5e3e6 74%);
        }

        .about {
            padding: 2rem;
        }

        #main {
            margin: auto !important;
        }

        .about-1 {
            visibility: hidden;
        }

        @media(max-width:762px) {
            .row p {
                display: block;
                word-break: normal !important;
                width: 100% !important;
            }

            .about:first-child {
                visibility: hidden;
                display: none
            }

            .about-1 {
                visibility: visible;
                float: left;
                padding: 2.1rem;
                background-color: black;
                color: white;
                border-radius: 15px 0px 0px 50px;
                margin-right: 1rem;

            }

            .information {

                padding: 2rem;
                border-radius: 15px 50px;
                border: 2px solid black;
            }

            .buttons {
                margin-top: 2rem;
            }

        }

        @media(max-width:520px) {
            .row p {
                font-size: 1rem;
            }
        }
    </style>
    <div class="display-4 d-flex justify-content-center mb-5">Students Data</div>
    <div class="row mb-5">
        <div class="col-md-12 d-md-flex about">
            <p>User Email</p>
            <p>Name</p>
            <p>Community</p>
            <p>Tenth Mark</p>
            <p>Twelfth Mark</p>
            <p>Standing Arrears</p>
            <p>Hosteler</p>
            <p>Fee Pending</p>
        </div>
        <div class="col-md-12 about  ">
            <% for(let student of Students) {%>
                <div class="col-md-12 d-md-flex about-1">
                    <p>User Email</p>
                    <p>Name</p>
                    <p>Community</p>
                    <p>Tenth Mark</p>
                    <p>Twelfth Mark</p>
                    <p>Standing Arrears</p>
                    <p>Hosteler</p>
                    <p>Fee Pending</p>
                </div>
                <div class="info mb-5">
                    <div class="  d-md-flex information">
                        <p>
                            <%= student.userEmail%>
                        </p>
                        <p>
                            <%= student.name %>
                        </p>
                        <p>
                            <%= student.community %>
                        </p>
                        <p>
                            <%= student.tenth %>
                        </p>
                        <p>
                            <%= student.twelfth %>
                        </p>
                        <p>
                            <%= student.standingArrears%>
                        </p>
                        <p>
                            <%= student.Hosteler %>
                        </p>
                        <p>
                            <%= student.feePending %>
                        </p>
                    </div>
                    <% if(isAdmin) {%>

                        <div class="buttons d-flex">

                            <a href="/viewStudents/<%=student._id%>/edit"><button class="btn btn-info">Edit</button></a>

                            <form action="/viewStudents/<%=student._id%>?_method=DELETE" method="POST"><button
                                    class="btn btn-danger mx-4">Delete</button></form>
                        </div>
                        <% } %>
                </div>
                <% } %>
        </div>

    </div>