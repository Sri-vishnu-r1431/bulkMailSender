<%- layout("./layouts/boilerplate")%>
    <style>
        .Student {
            border-radius: 15px 50px !important;
            border-width: 8px !important;
            word-wrap: break-word;
            width: 100% !important;
            padding: 2rem;
        }

        .row p:not(:nth-child(1)) {
            width: calc(100%/8);
            word-wrap: break-word;
        }

        .row p:nth-child(1) {
            width: calc(100%/4);

        }

        .row {
            border: 2px solid black;
            border-radius: 15px;
        }

        .row p {
            font-size: 1.2rem;
        }

        .about {
            padding: 2rem;
            overflow: hidden;
        }

        .about:first-child {
            color: grey;
            background-color: black;
            text-transform: capitalize;
            border-top-left-radius: inherit;
            border-top-right-radius: inherit;
            font-weight: 500;
        }

        .about:not(:first-child) {
            border-radius: 15px;
        }

        .about {
            padding: 2rem;
        }

        #main {
            margin: auto !important;
        }

        .about-1 {
            visibility: hidden;
        }

        @media(max-width:762px) {
            .row p {
                display: block;
                word-break: normal !important;
                width: 100% !important;
            }

            .about:first-child {
                visibility: hidden;
                display: none
            }

            .about-1 {
                visibility: visible;
                float: left;
                padding: 2rem;
                border: 8px solid black;
                background-color: black;
                margin-right: 1rem;
                color: grey;
                border-radius: 15px 0px 0px 50px;
                z-index: 1000;
            }

            .information {
                padding: 2rem;
                background-color: white;
                border: 2px solid black;
                border-radius: 15px;
            }
        }
    </style>
    <div class="display-3 d-flex justify-content-center m-4">Successfully uploaded <%=Students.length%>
            data </div>
    <div class="row mb-4">
        <div class="col-md-12 d-md-flex about">
            <p>User Email</p>
            <p>Name</p>
            <p>Community</p>
            <p>Tenth Mark</p>
            <p>Twelfth Mark</p>
            <p>Standing Arrears</p>
            <p>Hosteler</p>
            <p>Fee Pending</p>
        </div>
        <div class="col-md-12 about ">
            <% for(let student of Students) {%>
                <div class="col-md-12 d-md-flex about-1">
                    <p>User Email</p>
                    <p>Name</p>
                    <p>Community</p>
                    <p>Tenth Mark</p>
                    <p>Twelfth Mark</p>
                    <p>Standing Arrears</p>
                    <p>Hosteler</p>
                    <p>Fee Pending</p>
                </div>
                <div class="info mb-5">
                    <div class="  d-md-flex information Student rounded border border-success">
                        <p>
                            <%= student.userEmail%>
                        </p>
                        <p>
                            <%= student.name %>
                        </p>
                        <p>
                            <%= student.community %>
                        </p>
                        <p>
                            <%= student.tenth %>
                        </p>
                        <p>
                            <%= student.twelfth %>
                        </p>
                        <p>
                            <%= student.standingArrears%>
                        </p>
                        <p>
                            <%= student.Hosteler %>
                        </p>
                        <p>
                            <%= student.feePending %>
                        </p>
                    </div>
                </div>
                <% } %>
        </div>

    </div>